<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorGray1"
                android:weightSum="1">

                <Button
                    android:id="@+id/drawerOpen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_baseline_menu_24"
                    android:drawablePadding="20dp"
                    android:layout_marginLeft="10dp"
                    android:paddingHorizontal="10dp" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".8"
                    android:layout_height="80dp"
                    android:src="@drawable/logo"/>
                <!--<RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:gravity="end"
                    android:paddingRight="10dp">

                    <ImageButton
                        android:id="@+id/icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_baseline_notifications_24" />

                    <TextView
                        android:id="@+id/batch_counter"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignTop="@id/icon"
                        android:layout_gravity="center|end"
                        android:layout_marginLeft="-10dp"
                        android:layout_toRightOf="@id/icon"
                        android:background="@drawable/batch_counter"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="99"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp" />
                </RelativeLayout>-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".8"
                    android:text="Loading..."
                    android:textColor="@color/colorGreen"
                    android:textSize="19sp" />

                <ProgressBar
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight=".2" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/textSubcription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:visibility="gone"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/packageName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Package 1"
                            android:textColor="#000"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/packagePrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Price: \n Rs. 625/-"
                            android:textColor="@color/colorRed"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/subscribe_btn"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/colorOrange"
                            android:text="Subscribe"
                            android:textAllCaps="false"
                            android:textColor="#000"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:src="@drawable/image" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>